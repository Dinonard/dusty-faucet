{
    "compilerOptions": {
        "module": "esnext",
        "esModuleInterop": true,
        "target": "esnext",
        "lib": ["esnext", "es6"],
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "build",
        "strict": true,
        "rootDir": "src",
        "baseUrl": ".",
        "resolveJsonModule": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "strictPropertyInitialization": false,
        "removeComments": true,
        "noImplicitAny": false
    },
    "lib": ["esnext"],
    "include": ["src/**/*"],
    "exclude": ["node_modules", "build", "dist", "scripts"]
}
